<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.CharacterCreationController" prefWidth="1500" prefHeight="1000">
    <left>
        <Button text="Back" onMouseClicked="#handleBack"/>
    </left>
    <center>
        <HBox fx:id="charactersBox"/>
    </center>
    <bottom>
        <HBox>
            <Label text="Save game name:"/>
            <TextField text="save" fx:id="saveNameField"/>
            <Button text="Submit" fx:id="submitButton" onMouseClicked="#handleSubmit"/>
        </HBox>
    </bottom>
</BorderPane>
